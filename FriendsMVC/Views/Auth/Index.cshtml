@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" >
<head>
  <meta charset="UTF-8">
  <title>Trucking Industry</title>
  <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css'><link rel="stylesheet" href="./style.css">
  <link rel="stylesheet" href="~/css/styleAuth.css">
  <style>
	  body {
	height: 95vh;
}
  </style>
</head>
<body>
<div class="container" id="container">
	<div class="form-container sign-up-container">
		<form class="login" action="#">
			<h1>Регистрация</h1>
			<div class="social-container">
				@*<a href="#" class="social"><i class="fab fa-facebook-f"></i></a>*@
				<a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
				@*<a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>*@
			</div>
			<span>или Вы выполнить регистрацию через почту</span>
			<input type="text" placeholder="Имя" />
			<input type="email" placeholder="Электронная почта" />
			<input type="password" placeholder="Пароль" />
			<button>Создать аккаунт</button>
		</form>
	</div>
	<div class="form-container sign-in-container">
		<form class="login" action="/Home">
			<h1>Авторизация</h1>
			<div class="social-container">
				@*<a href="#" class="social"><i class="fab fa-facebook-f"></i></a>*@
				<a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
				@*<a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>*@
			</div>
			<span>или использовать Ваш аккаунт</span>
			<input type="email" placeholder="Электронная почта" />
			<input type="password" placeholder="Пароль" />
			<a href="#">Забыли пароль?</a>
			<button>Вход</button>
		</form>
	</div>
	<div class="overlay-container">
		<div class="overlay">
			<div class="overlay-panel overlay-left">
				<h1>Хорошо, что Вы вернулись!</h1>
				<p>Чтобы оставаться на связи с нами, пожалуйста, войдите под своей личной информацией.</p>
				<button class="ghost" id="signIn">Авторизация</button>
			</div>
			<div class="overlay-panel overlay-right">
				<h1>Привет, Друг!</h1>
				<p>Введите свои личные данные и начните путешествие с нами!</p>
				<button class="ghost" id="signUp">Регистрация</button>
			</div>
		</div>
	</div>
</div>
<script  src="~/js/scriptAuth.js"></script>
</body>
</html>
